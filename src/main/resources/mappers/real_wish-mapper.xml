<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="realWishMapper">
	<resultMap type="RealWish" id="realWishResultSet">
		<id property="stuffNo" column="STUFF_NO"/>
		<id property="loginUser" column="USERID"/>
		<id property="status" column="STATUS"/>
	</resultMap>

	
	<insert id="insertWish"
			parameterType="RealWish">
		INSERT INTO USER_WISH
		VALUES(
		#{stuffNo}, 
		#{loginUser},
		'Y'
		)
	</insert>
	
		<update id="deleteStuffWish"
			parameterType="_int">
		UPDATE USER_WISH
		SET STATUS='N'
		WHERE STUFF_NO = #{stuff_no}
	</update>
	
	<update id="deleteIdWish"
			parameterType="String">
		UPDATE USER_WISH
		SET STATUS='N'
		WHERE USERID = #{userId}
	</update>
	
	
	<select id="selectWishList" parameterType="String"
	resultType="_int">
		SELECT STUFF_NO
		FROM USER_WISH
		WHERE USERID=#{userId} AND STATUS='Y'
	</select>

	<update id="deleteWish" parameterType="hashmap">
		UPDATE FROM USER_WISH SET STATUS='N' WHERE STUFF_NO=#{rno} AND USERID=#{userId}
	</update>
	
</mapper>
	